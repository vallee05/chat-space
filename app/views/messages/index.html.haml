.wrapper
  = render "shared/side_bar"
.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      .main-header__left-box__member-list
        Member:
        -# .main-header__left-box__member-list__member
        -@group.users.each do |user|
          %li.list
            = user.name
    =link_to edit_group_path(@group.id), class: "main-header__edit-btn" do
      Edit


  .messages
    = render @messages



  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = fa_icon 'picture-o'
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'send-btn'






